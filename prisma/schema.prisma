generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Client {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  phone     String?
  address   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  payments  Payment[]
}

model Product {
  id         String   @id @default(cuid())
  name       String
  sku        String   @unique
  category   String?
  stock      Int
  price      Float
  imageUrl   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Payment {
  id          String   @id @default(cuid())
  amount      Float
  type        String // "Cash", "Bank Transfer"
  status      String // "Received", "Sent"
  description String
  date        DateTime
  client      Client   @relation(fields: [clientId], references: [id])
  clientId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
